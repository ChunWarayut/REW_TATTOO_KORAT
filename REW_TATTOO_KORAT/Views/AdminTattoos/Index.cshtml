@model IEnumerable<REW_TATTOO_KORAT.Models.Tattoo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Tattoo_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tattoo_Pic)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Size)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Unit_Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tattoo_Type.Type_Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Tattoo_Name)
        </td>
        <td>

            <img src="~/image/@Html.DisplayFor(modelItem => item.Tattoo_Pic)"
                 alt="company logo"
                 height="50px"
                 asp-append-version="true" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Size)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Unit_Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tattoo_Type.Type_Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Tattoo_ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Tattoo_ID })
        </td>
    </tr>
}

</table>
